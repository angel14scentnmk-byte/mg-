    <button onclick="calculateSum()">niilber</button>

    <p id="result"></p>

    <script>
        function calculateSum() {
            let inputs = document.querySelectorAll("#inputs input");
            let sum = 0;
            inputs.forEach(input => {
                let num = parseFloat(input.value) || 0; 
                sum += num;
            });
            document.getElementById("result").innerText = "20 tooni niilbr: " + sum;
        }
    </script>
