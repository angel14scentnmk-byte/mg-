<body>

    <input id="num1" type="number" placeholder="1">
    <input id="num2" type="number" placeholder="2">
    <input id="num3" type="number" placeholder="3">
    <input id="num4" type="number" placeholder="4">
    <button onclick="findmax()">hmgiin ikh toog oloh</button>
    <p id="result"></p>

    <script>

        function findMax() {
            let a = parsefloat(document.getElementById("num1").value);
            let b = parsefloat(document.getElementById("num2").value);
            let c = parsefloat(document.getElementById("num3").value);
            let d = parsefloat(document.getElementById("num4").value);

            let maxnum = math.max(a,b,c,d);

            document.getElementById("result").innerText = "hmgiin ikh too: " + maxnum;
        }
		
    </script>
